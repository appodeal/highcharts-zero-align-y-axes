  "version": "0.0.1",
  "description": "A plugin for Highcharts that aligns y-axes by zero.",
  "main": "./src/index.ts",
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "node_modules/.bin/tsc",
    "postbuild": "node tools/dist-files.js",
